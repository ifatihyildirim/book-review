<div class="col-md-6 col-md-offset-3">
  <div class="edit-book-form">
    <h1>Edit Book</h1>

    <%= simple_form_for @book, html: { :multipart => true } do |b| %>
    <%= b.select :category_id, @categories %>
    <%= b.file_field :book_img %>
    <%= b.input :title, label: "Book Title" %>
    <%= b.input :description %>
    <%= b.input :author %>
    <%= b.button :submit, :class => "btn-custom2" %>
    <% end %>
  </div>
</div>
